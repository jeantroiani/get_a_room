<div class="modal fade" id="sign_up_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <article class="modal-content">
      <section class="modal-header">

        <button type="button" class="close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span>
          <span class="sr-only">Close</span>
        </button>

        <h4 class="modal-title" id="myModalLabel">Sign up</h4>
      </section>

      <section class="modal-body">

        <%= form_for(User.new, as: :user, url: registration_path(:user), html: { class: 'form-signup', role: 'form' }) do |f| %>

        <span><%= f.label :username %><br />
          <%= f.text_field :username, class: 'form-control' %></span>

        <span><%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, class: 'form-control' %></span>

        <span><%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off", class: 'form-control' %></span>

        <span><%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %></span>
          
      </section>
      
      <span class="modal-footer">
          <%= f.submit "Subscribe", class: "btn btn-lg btn-primary btn-block"%>
        <% end %>
      </span>
      
    </article>
  </div>
</div>