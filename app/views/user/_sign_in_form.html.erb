<div class="modal fade" id="sign_in_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <article class="modal-content">
      <section class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span>
          <span class="sr-only">Close</span>
        </button>
        <h4 class="modal-title" id="myModalLabel">Sign in</h4>
      </section>

      <section class="modal-body">
        <%= form_for(User.new, as: :user, url: session_path(:user), html: { class: 'form-signin', role: 'form' }) do |f| %>
        <span><%= f.label :login %><br />
          <%= f.text_field :login, class: 'form-control' %></span>
        <span><%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off", class: 'form-control' %></span>
      </section>
      <div class="modal-footer">
        <%= f.submit "login", class: "btn btn-lg btn-primary btn-block"%>
        <% end %>
      </section>
    </article>
  </div>
</div>