	<% if notice.present? %>
	<article class="flash">
	<span class="alert alert-success alert-dismissible" role="alert"><%= notice %>	<button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button></span>
	</article>
  <% end %>

	<% if alert.present? %>
	<article class="flash">
  	<span class="alert alert-danger alert-dismissible" role="alert"><%= alert %><button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button></span>
  	</article>
  <% end %>
